                                android:textSize="14dp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:paddingRight="15dp" >

                                <CheckBox
