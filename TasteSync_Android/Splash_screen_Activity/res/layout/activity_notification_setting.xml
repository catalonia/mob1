                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:button="@drawable/tich"
                                    android:checked="true"
                                    android:gravity="center" />
                            </RelativeLayout>

                            <RelativeLayout
