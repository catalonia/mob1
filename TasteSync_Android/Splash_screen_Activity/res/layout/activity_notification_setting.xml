                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="1dp"
                                android:gravity="center" >

                                <CheckBox
                                    android:id="@+id/cb_recommend_mail_6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
