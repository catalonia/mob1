<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="8"
        android:background="#ecede8"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/email_cancle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.2"
            android:gravity="center"
            android:text="Cancle"
            android:textColor="#0099cc"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/email_cancle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="Need a restaurant reco..."
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_send"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.2"
            android:gravity="center"
            android:text="Send"
            android:textColor="#0099cc"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:text="To: "
                    android:textColor="#c6c6c6"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/email_to"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:text="duykhanh.t2@gmail.com"
                    android:textColor="#0099cc"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="38"
                android:background="#d9d9d9" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Cc/Bcc, From: loc.le@mobioneer.com"
                android:textColor="#c6c6c6"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="80"
                android:background="#d9d9d9" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:text="Subject: "
                    android:textColor="#c6c6c6"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Need a restaurant recommend... "
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="70"
                android:background="#d9d9d9" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/email_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:gravity="left|top"
                android:paddingTop="10dp"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>